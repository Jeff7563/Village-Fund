rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email.matches('.*admin.*') ||
        get(/databases/$(database)/documents/members/$(request.auth.uid)).data.role == 'admin'
      );
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // ============================================
    // MEMBERS COLLECTION
    // ============================================
    match /members/{userId} {
      // Users can read their own document, admins can read all
      allow read: if isOwner(userId) || isAdmin();
      
      // Users can create their own document during registration
      allow create: if isOwner(userId) && 
                      !request.resource.data.keys().hasAny(['role']) &&
                      request.resource.data.Balance == 0;
      
      // Users can update their own profile (except Balance and role)
      allow update: if isOwner(userId) && 
                      !request.resource.data.diff(resource.data).affectedKeys().hasAny(['Balance', 'role']);
      
      // Admins can update any member (including Balance and role)
      allow update: if isAdmin();
      
      // Only admins can delete members
      allow delete: if isAdmin();
    }
    
    // ============================================
    // TRANSACTIONS COLLECTION
    // ============================================
    match /transactions/{transactionId} {
      // Users can read their own transactions, admins can read all
      allow read: if isAuthenticated() && (
        resource.data.memberId == request.auth.uid || 
        isAdmin()
      );
      
      // Users can create transactions (deposit/withdraw)
      allow create: if isAuthenticated() && 
                      request.resource.data.memberId == request.auth.uid &&
                      request.resource.data.status == 'pending' &&
                      request.resource.data.amount > 0 &&
                      request.resource.data.type in ['deposit', 'withdraw'];
      
      // Only admins can update transactions (approve/reject)
      allow update: if isAdmin();
      
      // Only admins can delete transactions
      allow delete: if isAdmin();
    }
    
    // ============================================
    // DIVIDENDS COLLECTION
    // ============================================
    match /dividends/{dividendId} {
      // Users can read their own dividends, admins can read all
      allow read: if isAuthenticated() && (
        resource.data.memberId == request.auth.uid || 
        isAdmin()
      );
      
      // Only admins can create/update/delete dividends
      allow create, update, delete: if isAdmin();
    }
    
    // ============================================
    // SYSTEM COLLECTION (Settings, Config)
    // ============================================
    match /system/{document=**} {
      // Only admins can read/write system settings
      allow read, write: if isAdmin();
    }
    
    // ============================================
    // NOTIFICATIONS COLLECTION
    // ============================================
    match /notifications/{userId}/{notificationId} {
      // Users can read their own notifications
      allow read: if isOwner(userId);
      
      // Users can update their own notifications (mark as read)
      allow update: if isOwner(userId) && 
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']);
      
      // Only admins can create notifications
      allow create: if isAdmin();
      
      // Only admins can delete notifications
      allow delete: if isAdmin();
    }
    
    // ============================================
    // AUDIT LOG COLLECTION
    // ============================================
    match /audit_log/{logId} {
      // Only admins can read audit logs
      allow read: if isAdmin();
      
      // Only admins can create audit logs (no updates/deletes)
      allow create: if isAdmin();
      
      // Prevent updates and deletes to maintain integrity
      allow update, delete: if false;
    }
  }
}
